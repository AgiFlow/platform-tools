{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "{{ packageName }}",
  "projectType": "library",
  "sourceRoot": "packages/{{ packageName | replace: '@agiflowai/', '' }}/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsdown",
        "cwd": "packages/{{ packageName | replace: '@agiflowai/', '' }}"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/{{ packageName | replace: '@agiflowai/', '' }}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check packages/{{ packageName | replace: '@agiflowai/', '' }}"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write packages/{{ packageName | replace: '@agiflowai/', '' }}"
      }
    }
  },
  "tags": ["type:library"]
}